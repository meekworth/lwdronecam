<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/camera_host_info">
        <EditTextPreference
            app:defaultValue="@string/default_cam_ip"
            app:key="@string/settings_key_cam_ip"
            app:title="@string/camera_ip" />
        <EditTextPreference
            app:defaultValue="@string/default_cam_stream_port"
            app:key="@string/settings_key_cam_stream_port"
            app:title="@string/camera_stream_port" />
        <EditTextPreference
            app:defaultValue="@string/default_cam_ctrl_port"
            app:key="@string/settings_key_cam_ctrl_port"
            app:title="@string/camera_ctrl_port" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/support">
        <Preference
            app:key="@string/settings_key_help"
            app:title="@string/help_title" />
        <Preference
            app:key="@string/settings_key_about"
            app:title="@string/about" />
    </PreferenceCategory>

</PreferenceScreen>
